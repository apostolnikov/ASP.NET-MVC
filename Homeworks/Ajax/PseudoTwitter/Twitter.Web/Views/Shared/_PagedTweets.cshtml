@using PagedList
@using PagedList.Mvc

@using Twitter.Web.Models.ViewModels

@model PagedList<PagedTweetViewModel>

<div class="col-sm-10">
    @foreach (PagedTweetViewModel tweet in Model)
    {
        @Html.DisplayFor(m => tweet)
    }
    <div class="center">
        @Html.PagedListPager(Model, page => Url.Action("Index", "Home", new { page, pageSize = Model.PageSize }))
        Showing @(Model.LastItemOnPage == 0 ? 0 : Model.FirstItemOnPage) to @Model.LastItemOnPage out of @Model.TotalItemCount Tweets
    </div>
</div>

