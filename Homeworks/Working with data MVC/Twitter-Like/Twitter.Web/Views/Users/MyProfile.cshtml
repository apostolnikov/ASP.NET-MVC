@model Twitter.Web.Models.ViewModels.User.UserProfileViewModel
@{
    ViewBag.Title = "MyProfile";
}
<div class="row">
    <div class="col-md-4">

        <img src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(@Model.ProfilePictureUrl))" class="img-thumbnail"/>
        <div class="row">
            <div class="col-md-8">
                <h3>@Model.UserName</h3>
            </div>
            <div class="col-md-8">
                <h4>@Model.Email</h4>
            </div>
            <div class="col-md-8">
                <h4>@Model.JobTitle</h4>
            </div>
            <div class="col-md-8">
                <h4>@Model.Joined</h4>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-3 page-header">
                <strong>Tweets</strong> <span class="badge">@Model.TweetsCount</span></div>
            <div class="col-md-3 page-header">
                <strong>Following</strong> <span class="badge">@Model.FollowingCount</span></div>
            <div class="col-md-3 page-header">
                <strong>Followers</strong> <span class="badge">@Model.FollowersCount</span></div>
            <div class="col-md-3 page-header">
                <strong>Favourites</strong> <span class="badge">@Model.FavouritesCount</span></div>
        </div>

        <div class="row">
            @foreach (var userTweet in @Model.UserTweets)
            {
                <div class="col-md-12">@Html.Partial("_UserTweetsPartial", userTweet)</div>
            }
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/customScripts")
}